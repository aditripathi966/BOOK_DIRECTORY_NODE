<%- include("partials/header.ejs")%>
<%- include("partials/nav.ejs")%>

<div class="container mt-5">
  <div class="row justify-content-center">
    <div class="col-md-6">
      <form class="p-4 bg-light rounded shadow-lg" action="/signin" method="post">

        <h1 class="text-center mb-4">Sign-In Page</h1>
        <div class="mb-3">
          <input class="form-control" type="text" placeholder="Username" name="username">
        </div>
        <div class="mb-3">
          <input class="form-control" type="password" placeholder="Password" name="password">
        </div>
        <div class="mb-3 text-end">
          <a href="/forgetpw">Forgot password?</a>
        </div>
        <div class="d-grid gap-2">
          <button class="btn btn-primary" type="submit">Sign-In</button>
        </div>
        <p class="mt-3 text-center">Don't have an account? <a href="/signup">Sign Up</a></p>
      </form>
    </div>
  </div>
</div>

<%- include("partials/footer.ejs")%>
