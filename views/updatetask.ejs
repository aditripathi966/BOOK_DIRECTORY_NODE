<%- include('partials/header')%>
<!--  -->
<%- include('partials/nav')%>
<form class="m-auto w-25 mt-5" action="/updatetask/<%= id%>/<%= idx%>" method="post">
    <h1 class="mb-4">Update Task</h1>
    <input
        class="form-control mb-3"
        type="text"
        placeholder="title"
        name="title"
        value="<%= arr.title%>"
    />
    <input
        class="form-control mb-3"
        type="text"
        placeholder="description"
        name="desc"
        value="<%= arr.desc%>"
    />
    <input
        class="form-control mb-3"
        type="date"
      
        name="date"
        value="<%= arr.date%>"
    />
    <button class="btn btn-primary w-25">Update</button>


<%- include('partials/footer')%>
